@using Furn.Models
@model List<Message>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
	var count = 1;
}

<div class="col-lg-12 grid-margin stretch-card">
	<div class="card">
		<div class="card-body">
			<h4 class="card-title">Contact</h4>

			<div class="table-responsive">
				<table class="table">
					<thead>
						<tr>
							<th>#</th>
							<th>Name</th>
							<th>Email</th>
							<th>Message</th>
							<th>Date</th>
							<th>Delete</th>

						</tr>
					</thead>
					<tbody>
						@foreach (var item in Model)
						{

							<tr>
								<td>@count</td>
								<td>@item.Name</td>
								<td>@item.Email</td>
								<td>@item.Description</td>
								<td>@item.Tarix</td>
								<td><a asp-action="Delete" asp-area="Admin" asp-controller="Contact" asp-route-Id="@item.Id" class="btn btn-outline-danger">Delete</a></td>
							</tr>
							count++;
						}


					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>

