@using Furn.ViewModel
@model List<BasketItemVM>
@{
	Layout = null;
	var count = 1;
}
<!doctype html>
<html class="no-js" lang="en">

<head>
	<!-- meta data -->
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
	<!--font-family-->
	<link href="https://fonts.googleapis.com/css?family=Roboto:100,100i,300,300i,400,400i,500,500i,700,700i,900,900i" rel="stylesheet">

	<!-- title of site -->
	<title>Furniture</title>

	<!-- For favicon png -->
	<link rel="shortcut icon" type="image/icon" href="~/furn-master/assets/logo/favicon.png" />

	<!--font-awesome.min.css-->
	<link rel="stylesheet" href="~/furn-master/assets/css/font-awesome.min.css">

	<!--linear icon css-->
	<link rel="stylesheet" href="~/furn-master/assets/css/linearicons.css">

	<!--animate.css-->
	<link rel="stylesheet" href="~/furn-master/assets/css/animate.css">

	<!--owl.carousel.css-->
	<link rel="stylesheet" href="~/furn-master/assets/css/owl.carousel.min.css">
	<link rel="stylesheet" href="~/furn-master/assets/css/owl.theme.default.min.css">

	<!--bootstrap.min.css-->
	<link rel="stylesheet" href="~/furn-master/assets/css/bootstrap.min.css">

	<!-- bootsnav -->
	<link rel="stylesheet" href="~/furn-master/assets/css/bootsnav.css">

	<!--style.css-->
	<link rel="stylesheet" href="~/furn-master/assets/css/style.css">

	<!--responsive.css-->
	<link rel="stylesheet" href="~/furn-master/assets/css/responsive.css">

	<!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
	<!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
	<!--[if lt IE 9]>
		<script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
		<script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
	<![endif]-->

</head>
<header id="home" class="welcome-hero">
	<div class="top-area">
		<div class="header-area">
			<!-- Start Navigation -->
			<nav class="navbar navbar-default bootsnav  navbar-sticky navbar-scrollspy" data-minus-value-desktop="70" data-minus-value-mobile="55" data-speed="1000">

				<!-- Start Top Search -->
				<div class="top-search">
					<div class="container">
						<div class="input-group">
							<span class="input-group-addon"><i class="fa fa-search"></i></span>
							<input type="text" class="form-control" placeholder="Search">
							<span class="input-group-addon close-search"><i class="fa fa-times"></i></span>
						</div>
					</div>
				</div>
				<!-- End Top Search -->

				<div class="container">
					<!-- Start Atribute Navigation -->
					<div class="attr-nav">
						<ul>
							<li class="search">
								<a href="#"><span class="lnr lnr-magnifier"></span></a>
							</li><!--/.search-->
							<li class="nav-setting">
								<a href="#"><span class="lnr lnr-cog"></span></a>
							</li><!--/.search-->
							<li class="dropdown">
								<a href="#" class="dropdown-toggle" data-toggle="dropdown">
									<span class="lnr lnr-cart"></span>
									<span class="badge badge-bg-1">2</span>
								</a>
								<ul class="dropdown-menu cart-list s-cate">



									<li class="total">
										<span>Total: $0.00</span>
										<button class="btn-cart pull-right" onclick="window.location.href='#'">view cart</button>
									</li>
								</ul>
							</li><!--/.dropdown-->
						</ul>
					</div><!--/.attr-nav-->
					<!-- End Atribute Navigation -->
					<!-- Start Header Navigation -->
					<div class="navbar-header">
						<button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-menu">
							<i class="fa fa-bars"></i>
						</button>
						<a class="navbar-brand" href="index.html">sine<span>mkt</span>.</a>

					</div><!--/.navbar-header-->
					<!-- End Header Navigation -->
					<!-- Collect the nav links, forms, and other content for toggling -->
					<div class="collapse navbar-collapse menu-ui-design" id="navbar-menu">
						<ul class="nav navbar-nav navbar-center" data-in="fadeInDown" data-out="fadeOutUp">
							<li class=" scroll active"><a href="#home">home</a></li>
							<li class="scroll"><a href="#new-arrivals">new arrival</a></li>
							<li class="scroll"><a href="#feature">features</a></li>
							<li class="scroll"><a href="#blog">blog</a></li>
							<li class="scroll"><a href="#newsletter">contact</a></li>
						</ul><!--/.nav -->
					</div><!-- /.navbar-collapse -->
				</div><!--/.container-->
			</nav><!--/nav-->
			<!-- End Navigation -->
		</div><!--/.header-area-->
		<div class="clearfix"></div>

	</div><!-- /.top-area-->
</header>
<br />
<br />
<br />
<br />
<div class="container">
	<table class="table table-dark table-striped">
		<thead>
			<tr>
				<th scope="col">#</th>
				<th scope="col">Image</th>
				<th scope="col">Name</th>
				<th scope="col">Price</th>
				
				<th scope="col">Count</th>
				<th scope="col">TotalPrice</th>
			</tr>
		</thead>
		<tbody>
			@foreach (BasketItemVM basket in Model)
			{
				<tr>
					<th>@count</th>
					<td><img src="~/skydash/images/@basket.ImagePath" height="150" /></td>
					<td>@basket.Name</td>
					<td>@basket.Price</td>
					<td>@basket.ProductCount</td>
					<td>@(@basket.Price * @basket.ProductCount)</td>
				</tr>
				count++;
			}

		</tbody>
	</table>

	<p class="fw-bold">Total Price: @Model.Sum(s=>s.Price*s.ProductCount)</p>
</div>
