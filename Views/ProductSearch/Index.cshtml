@using Furn.Models
@model List<Product>
@{
	ViewData["Title"] = "Index";
	Layout = null/* "~/Views/Shared/_Layout.cshtml"*/;
}

<!doctype html>
<html class="no-js" lang="en">

<head>
	<!-- meta data -->
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
	<!--font-family-->
	<link href="https://fonts.googleapis.com/css?family=Roboto:100,100i,300,300i,400,400i,500,500i,700,700i,900,900i" rel="stylesheet">

	<!-- title of site -->
	<title>Furniture</title>

	<!-- For favicon png -->
	<link rel="shortcut icon" type="image/icon" href="~/furn-master/assets/logo/favicon.png" />

	<!--font-awesome.min.css-->
	<link rel="stylesheet" href="~/furn-master/assets/css/font-awesome.min.css">

	<!--linear icon css-->
	<link rel="stylesheet" href="~/furn-master/assets/css/linearicons.css">

	<!--animate.css-->
	<link rel="stylesheet" href="~/furn-master/assets/css/animate.css">

	<!--owl.carousel.css-->
	<link rel="stylesheet" href="~/furn-master/assets/css/owl.carousel.min.css">
	<link rel="stylesheet" href="~/furn-master/assets/css/owl.theme.default.min.css">

	<!--bootstrap.min.css-->
	<link rel="stylesheet" href="~/furn-master/assets/css/bootstrap.min.css">

	<!-- bootsnav -->
	<link rel="stylesheet" href="~/furn-master/assets/css/bootsnav.css">

	<!--style.css-->
	<link rel="stylesheet" href="~/furn-master/assets/css/style.css">

	<!--responsive.css-->
	<link rel="stylesheet" href="~/furn-master/assets/css/responsive.css">

</head>
<body>

	<header id="home" class="welcome-hero">
		<div class="top-area">
			<div class="header-area">
				<!-- Start Navigation -->
				<nav class="navbar navbar-default bootsnav  navbar-sticky navbar-scrollspy" data-minus-value-desktop="70" data-minus-value-mobile="55" data-speed="1000">

					<!-- Start Top Search -->
					<div class="top-search">
						<div class="container">
							<form asp-action="Index" asp-controller="ProductSearch" method="get">
								<div class="input-group">
									<span class="input-group-addon"><i class="fa fa-search"></i></span>
									<input type="text" class="form-control" placeholder="Search" name="searchString">
									<span class="input-group-addon close-search" type="submit"><i class="fa fa-times"></i></span>
								</div>
							</form>
						</div>
					</div>
					<!-- End Top Search -->

					<div class="container">
						<!-- Start Atribute Navigation -->
						<div class="attr-nav">
							<ul>
								<li class="search">
									<a href="#"><span class="lnr lnr-magnifier"></span></a>
								</li><!--/.search-->
								<li class="dropdown">
									<a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false">
										<span class="lnr lnr-cog"></span>
									</a>
									@await Component.InvokeAsync("User")

								</li>
								@await Component.InvokeAsync("Basket")
								<!--/.dropdown-->
							</ul>
						</div>

						<div class="navbar-header">
							<button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-menu">
								<i class="fa fa-bars"></i>
							</button>
							<a class="navbar-brand" asp-action="Index" asp-controller="Home">sine<span>mkt</span>.</a>

						</div>

						<!--/.navbar-header-->
						<!-- End Header Navigation -->
						<!-- Collect the nav links, forms, and other content for toggling -->
						<div class="collapse navbar-collapse menu-ui-design" id="navbar-menu">
							<ul class="nav navbar-nav navbar-center" data-in="fadeInDown" data-out="fadeOutUp">
								<li><a asp-action="Index" asp-controller="Home">home</a></li>
								<li><a asp-action="Index" asp-controller="Home">new arrival</a></li>
								<li><a asp-action="Index" asp-controller="Home">features</a></li>
								<li><a asp-action="Index" asp-controller="Home">blog</a></li>
								<li><a asp-action="Index" asp-controller="Home">contact</a></li>
							</ul><!--/.nav -->
						</div>

						<!-- /.navbar-collapse -->
					</div>

					<!--/.container-->
				</nav>

				<!--/nav-->
				<!-- End Navigation -->
			</div>

			<!--/.header-area-->
			<div class="clearfix"></div>

		</div>

		<!-- /.top-area-->
	</header>

<section id="new-arrivals" class="new-arrivals">
	<div class="container">
		<div class="section-header">
			<h2>Product</h2>
		</div><!--/.section-header-->
		<div class="new-arrivals-content">
			<div class="row">
				@foreach (Product item in Model)
				{

					<div class="col-md-3 col-sm-4">
						<div class="single-new-arrival">
							<div class="single-new-arrival-bg">
								<img src="~/skydash/images/@item.ImagePath" alt="new-arrivals images">
								<div class="single-new-arrival-bg-overlay"></div>
								<div class="new-arrival-cart">
									<p>
										<span class="lnr lnr-cart"></span>
										<a asp-action="AddBasket" asp-controller="Basket" asp-route-id="@item.Id">add <span>to </span> cart</a>
									</p>
									<p class="arrival-review pull-right">
										<span class="lnr lnr-heart"></span>
										<span class="lnr lnr-frame-expand"></span>
									</p>
								</div>
							</div>
							<h4><a href="#">@item.Name</a></h4>
							<p class="arrival-product-price">$@item.Price</p>
						</div>
					</div>
				}

			</div>
		</div>
	</div><!--/.container-->
</section>
	<br />
	<br />
	<br />
	<footer id="footer" class="footer">
		<div class="container">
			<div class="hm-footer-copyright text-center">
				<div class="footer-social">
					<a href="#"><i class="fa fa-facebook"></i></a>
					<a href="#"><i class="fa fa-instagram"></i></a>
					<a href="#"><i class="fa fa-linkedin"></i></a>
					
				</div>
				<p>
					&copy;copyright. designed and developed by <a href="https://www.themesine.com/">themesine</a>
				</p><!--/p-->
			</div><!--/.text-center-->
		</div><!--/.container-->

		<div id="scroll-Top">
			<div class="return-to-top">
				<i class="fa fa-angle-up " id="scroll-top" data-toggle="tooltip" data-placement="top" title="" data-original-title="Back to Top" aria-hidden="true"></i>
			</div>

		</div><!--/.scroll-Top-->

	</footer>

	<!--/.footer-->
	<!--footer end-->
	<!-- Include all js compiled plugins (below), or include individual files as needed -->

	<script src="~/furn-master/assets/js/jquery.js"></script>

	<!--modernizr.min.js-->
	<script src="https://cdnjs.cloudflare.com/ajax/libs/modernizr/2.8.3/modernizr.min.js"></script>

	<!--bootstrap.min.js-->
	<script src="~/furn-master/assets/js/bootstrap.min.js"></script>

	<!-- bootsnav js -->
	<script src="~/furn-master/assets/js/bootsnav.js"></script>

	<!--owl.carousel.js-->
	<script src="~/furn-master/assets/js/owl.carousel.min.js"></script>


	<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.4.1/jquery.easing.min.js"></script>


	<!--Custom JS-->
	<script src="~/furn-master/assets/js/custom.js"></script>

</body>

</html>

